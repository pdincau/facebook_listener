	{description, "Facebook listener application."},
	{vsn, "1"},
	{modules, []},
	{registered, [facebook_listener_sup]},
	{applications, [
            kernel,
            stdlib,
            crypto,
            asn1,
            public_key,
            ssl,
            cowboy,
